<link href="css/ion.rangeSlider.css" rel="stylesheet" type="text/css">
<script src="js/ion.rangeSlider.min.js"></script>
<script type="text/javascript">
    $("#range_age").ionRangeSlider({
        type: "double",
        grid: true,
        min: 16,
        max: 75,
        from: 18,
        to: 60,
        prefix: "Age "
    });

    $("#range_price").ionRangeSlider({
        type: "double",
        grid: true,
        min: 0,
        from: 2,
        to: 50,
        postfix: "M",
        max_postfix: "+",
        step: 0.1
    });

    $('#chosen_interests').chosen({width: "100%", no_results_text: "Oops, nothing found!"});

</script>

