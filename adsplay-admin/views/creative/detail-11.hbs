<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="creative/list">Ad Unit Management</a></li>
            <li class="active">Ad Report</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 text-center">
        <div class="panel">
            <div class="panel-body">
                <video id="video_ads" class="video-js vjs-default-skin vjs-big-play-centered" autoplay muted controls
                       loop preload="auto"
                       poster="//adsplay.net/img/logo.png"
                       data-setup=''
                       width='100%'
                       height='300'>
                    <source src="{{site.ads_cdn_domain}}/{{crt.media}}" type="video/mp4">
                </video>
            </div>
            <div class="panel-body margin-btn-5">
                {{#if actions.creative.edit.show }}
                    <a href="{{buildUrl editUrl}}" class="btn btn-primary">
                        <i class="fa fa-pencil-square-o fa-2" aria-hidden="true"></i> Edit
                    </a>
                {{/if}}
                {{#if actions.creative.copy.show }}    
                    <a href="{{buildUrl editUrl}}?copy=true" class="btn btn-default">
                        <i class="fa fa-files-o" aria-hidden="true"></i> Copy
                    </a>
                {{/if}}    
                {{#if actions.creative.delete.show }}    
                    <a href="{{site.base_domain}}/creative/delete/{{crt.id}}" onclick="return confirmDeleteCrt(this)" class="btn btn-danger">
                        <i class="fa fa-trash-o" aria-hidden="true"></i> Delete
                    </a>
                {{/if}}
            </div>
        </div>
    </div>
    <div class="col-lg-8 text-center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>{{crt.name}}</strong>
            </div>
            <div class="panel-body">

                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <tbody>
                        <tr>
                            <td colspan="2">
                                <div id="booking_progress"  style='height:55px;'>
                                    <svg></svg>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Created date</strong></td>
                            <td><span id="ads_date_started">{{crt.crtDate}}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Run date</strong></td>
                            <td><span id="ads_date_run">{{crt.runDate}}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Expired date</strong></td>
                            <td><span id="ads_date_expired">{{crt.expDate}}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Status</strong></td>
                            <td>
                                <span {{#if actions.creative.edit.show }} id="ads_status" data-status="{{crt.status}}" {{/if}}>{{crt.status}}</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Click Through URL</strong></td>
                            <td><a id="ads_cliThr" href="{{crt.cliThr}}">{{crt.cliThr}}</a></td>
                        </tr>
                        <tr>
                            <td><strong>Total Booking</strong></td>
                            <td><span id="ads_totalBooking" class="impress-text">{{formatCurrency crt.tBk}}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Daily Booking</strong></td>
                            <td><span id="ads_dailyBooking" class="impress-text">{{formatCurrency crt.dBk}}</span></td>
                        </tr>
                        <tr>
                            <td><strong>Hourly Booking</strong></td>
                            <td><span id="ads_hourlyBooking" class="impress-text">{{formatCurrency crt.hBk}}</span></td>
                        </tr>
                        <tr style="display: none">
                            <td><strong>Ad materials</strong></td>
                            <td><span id="ads_materials">{{crt.nameType}}</span></td>
                        </tr>
                        <tr style="display: none">
                            <td><strong>Duration</strong></td>
                            <td><span id="ads_duration">15 seconds</span></td>
                        </tr>
                        <tr style="display: none">
                            <td><strong>Size</strong></td>
                            <td><span id="ads_size">2 MB</span></td>
                        </tr>
                        <tr>
                            <td><strong>Click-through Rate (CTR)</strong></td>
                            <td><span datatype="real-time" id="ctr">0</span> %</td>
                        </tr>
                        <tr>
                            <td><strong>Completed-View Rate (CVR)</strong></td>
                            <td><span datatype="real-time" id="trueViewRate">0</span> %</td>
                        </tr>
                        <tr>
                            <td><strong>Total Impression</strong></td>
                            <td>
                                <span datatype="real-time" id="totalImp">0</span>
                                <span datatype="real-time" id="totalImpDelta" style="display: none"
                                      class="glyphicon glyphicon-export">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Total True View</strong></td>
                            <td><span datatype="real-time" id="totalTrv">0</span>
                                <span datatype="real-time" id="totalTrvDelta" style="display: none"
                                      class="glyphicon glyphicon-export">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Total Completed View</strong></td>
                            <td><span datatype="real-time" id="totalCpv">0</span>
                                <span datatype="real-time" id="totalCpvDelta" style="display: none"
                                      class="glyphicon glyphicon-export">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Total Click</strong></td>
                            <td><span datatype="real-time" id="totalClick">0</span>
                                <span datatype="real-time" id="totalClickDelta" style="display: none"
                                      class="glyphicon glyphicon-export">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Audience Reach</strong></td>
                            <td><span datatype="real-time" id="reach">0</span>
                                <span datatype="real-time" id="totalReachDelta" style="display: none"
                                      class="glyphicon glyphicon-export">0</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Total Estimated Revenue</strong></td>
                            <td><span id="ads_totalRevenue"
                                      class="impress-text">{{formatCurrency crt.totalRevenue}}</span></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


