<script>
//preview TVC Instream Video Ads auto
var player = videojs('video_ads').ready(function() {
    this.play();
});

var adType = {{crt.adType}};

var filterDate = new moment().format("YYYY-MM-DD");
var now = moment();
var currentDay = now.format("YYYY-MM-DD-HH");
var previousDay = now.subtract(1, 'days').format("YYYY-MM-DD-HH");

var totalBooking = parseInt({{crt.tBk}});

var urlSummary = "{{site.ssl_api_domain}}/api/creative/summary/{{crtId}}";
var urlLineChart = "{{site.ssl_api_domain}}/api/creative/stats/{{crtId}}?type={{type}}&begin={{begin}}&end={{end}}";
var urlDrawHourly = "{{site.ssl_api_domain}}/api/creative/stats/{{crtId}}?type=hourly";

loadSummaryData(urlSummary);
drawHourlyStatsData(urlDrawHourly, previousDay, currentDay);
loadLineChartWithData(urlLineChart);

if ('{{crt.status}}' === 'Running') {
    setInterval(function () {
        loadSummaryData(urlSummary);
        //drawHourlyStatsData(urlDrawHourly, previousDay, currentDay);
        // loadLineChartWithData();
    }, 10001);
}

var typePlatforms = {{{json platforms}}};
var typePlacements = {{{json placements}}};

var urlPlatforms = "{{site.ssl_api_domain}}/api/creatives/{{crtId}}/platforms";
var urlPlacements = "{{site.ssl_api_domain}}/api/creatives/{{crtId}}/placements"

setTimeout(renderPlatform(urlPlatforms, typePlatforms), 100);
setTimeout(displayAudienceReachAndDeviceType(urlPlacements, typePlacements), 100);
setTimeout(displayPlatforms(urlPlacements), 100);

</script>

