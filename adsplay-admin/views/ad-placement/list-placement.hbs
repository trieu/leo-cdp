<style type="text/css">
	#plt_form table td{
		position: relative;
	}
	.validatr-message{
		padding: 1px 5px !important;
		font-size: 11px;
		max-width: 160;
		z-index: 1;
	}
	.row-overlay{
		display: none;
	}
</style>
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            Ad Placement Management
        </h3>
    </div>
</div>

<p>
	<button type="button" class="btn btn-primary" id="new-placement">
		<i class="fa fa-fw fa-list"></i> New Placement
	</button>
</p>

<div class="row">
	<div class="col-lg-12">
		<div class="table-responsive">
			<table class="table table-hover table-striped" id="table-placement">
				<thead>
					<tr>
						<th class="td-max-60">ID</th>
						<th>Name</th>
						<th>Publisher</th>
						<th>Type</th>
						<th>Impression</th>
						<th>View</th>
						<th class="td-max-60">Width</th>
						<th class="td-max-60">Height</th>
						<th>Updated Date</th>
						<th class="td-max-60">Action</th>
					</tr>
				</thead>
				<tbody id="plt_container">
					{{#each placements}}
					<tr>
						<td class="plt_id">{{_id}}</td>
						<td class="plt_name">{{name}}</td>
						<td class="plt_publisher">{{publisher}}</td>
						<td class="plt_type">{{type}}</td>
						<td class="plt_impression">{{impression}}</td>
						<td class="plt_view">{{view}}</td>
						<td class="plt_w">{{width}}</td>
						<td class="plt_h">{{height}}</td>
						<td class="plt_updatedDate">{{updatedDate}}</td>
						<td width="60px">
							<button type="button" id="{{id}}" class="btn btn-primary btn-xs action-btn" title="get ads code">
								<i class="fa fa-file-code-o"></i>
							</button>
							<button type="button" id="{{id}}" class="btn btn-primary btn-xs edit-placement" title="edit">
								<i class="fa fa-pencil"></i>
							</button>
						</td>
					</tr>
					{{/each}}
				</tbody>
            </table>
		</div>
	</div>
</div>

<!-- modal form popup -->
<div id="modal-placement" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Placement Information</h4>
      </div>
      <div class="modal-body">
      	<form id="plt_form">
      		<table class="table table-bordered table-hover table-striped">
				<tbody>
					<input type="hidden" class="form-control" name="id">
					<tr>
						<td><strong>Name</strong></td>
						<td>
							<input type="text" class="form-control" name="name" data-minlength="10" required>
						</td>
					</tr>
					<tr>
						<td><strong>Publisher</strong></td>
						<td>
							<select id="ads-publisher" class="form-control" name="publisher" required>
				                <option value="-1">No</option>
				            </select>
						</td>
					</tr>
					<tr>
						<td><strong>Type</strong></td>
						<td>
							<select id="ads-type" class="form-control" name="type" required>
				                <option value="1">Video</option>
				                <option value="2">Display Banner</option>
				                <option value="3">Overlay Banner</option>
				            </select>
						</td>
					</tr>
					<tr>
						<td><strong>Impression</strong></td>
						<td>
							<input type="number" class="form-control" name="impression">
						</td>
					</tr>
					<tr>
						<td><strong>View</strong></td>
						<td>
							<input type="number" class="form-control" name="view">
						</td>
					</tr>
					<tr class="row-size-display">
						<td><strong>Ads Size</strong></td>
	                    <td>
	                        <select id="ads-size-display" name="size" class="select-multi" data-placeholder="Choose ads size">
	                            {{#each size_display}}
	                                <option value='{{size.w}}x{{size.h}}'>{{name}}: {{size.w}} x {{size.h}}</option>
	                            {{/each}}
	                        </select>
	                    </td>
					</tr>
					<tr class="row-adcode">
						<td><strong>adCode</strong></td>
						<td>
							<textarea name="adCode3rd" class="form-control" rows="3"></textarea>
						</td>
					</tr>
					
					<tr class="row-weight">
						<td><strong>Weight</strong></td>
						<td>
							<select class="form-control" name="weight3rd">
								<option value="0">0</option>
								<option value="10">10</option>
								<option value="20">20</option>
								<option value="30">30</option>
								<option value="40">40</option>
								<option value="50">50</option>
								<option value="60">60</option>
								<option value="70">70</option>
								<option value="80">80</option>
								<option value="90">90</option>
								<option value="100">100</option>
							</select>
						</td>
					</tr>
					<tr class="row-domain">
						<td><strong>Base Domain</strong></td>
						<td>
							<input type="text" class="form-control" name="baseDomain">
							<div class="checkbox">
								<label>
									<input type="checkbox" name="checkBaseDomain" value="1"> active
								</label>
							</div>
						</td>
					</tr>
					<tr class="row-enabled">
						<td><strong>Running Placement</strong></td>
						<td>
							<div class="checkbox">
								<label>
									<input type="checkbox" name="enabled" value="1" checked> (default enabled)
								</label>
							</div>
						</td>
					</tr>
				</tbody>
	        </table>
	        <div class="text-right">
	        	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        	<button type="submit" class="btn btn-primary" id="plt_submit">
					OK
				</button>
	        </div>
      	</form>
        
      </div>
    </div>
  </div>
</div>

<div id="action-placement" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Ads Code</h4>
      </div>
      <div class="modal-body">
      	<p>
      		<textarea onclick="this.focus();this.select()" readonly="readonly" placeholder="enter code" class="form-control" id="plt_code" rows="5">
      		</textarea>
      	</p>
		<div class="text-right">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<button type="submit" class="btn btn-primary" id="plt_copy">Copy</button>
		</div>
      </div>
    </div>
  </div>
</div>

<script src="js/business-domains/placement-handler.js"></script>