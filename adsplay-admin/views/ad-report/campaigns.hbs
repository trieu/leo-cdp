<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="#">Advertiser</a></li>
            <li class="active">All campaigns</li>
        </ol>
        <h1 class="page-header">
            All campaigns
        </h1>
    </div>
</div>
<!-- /.row -->

<style>
    #chart svg {
        height: 400px;
        background-color: #D8D8D8!important;
    }
    .nv-point-paths {
        padding-left: 5px;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i>Statistics in Recent 10 Days</h3>
            </div>
            <div class="panel-body">
                <div id="campaigns_stats_chart"></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Campaign</th>
                    <th>Status</th>
                    <th>Impression</th>
                    <th>Complete View</th>

                    <th>Click</th>
                    <th>CTR</th>
                    <th>Complete Per Impression</th>
                    <th>Cost</th>
                </tr>
                </thead>
                <tbody>
                {{#each campaigns}}
                    <tr class="active">
                        <td>{{id}}</td>
                        <td><a href="/campaign/{{id}}">{{name}}</a></td>
                        <td>{{status}}</td>
                        <td>{{formatCurrency imp}}</td>
                        <td>{{formatCurrency trv}}</td>

                        <td>{{formatCurrency c}}</td>
                        <td>{{ctr}}%</td>
                        <td>{{tvr}}%</td>
                        <td>{{formatCurrency cost}}</td>
                    </tr>
                {{/each}}
                <!--<tr class="success">
                    <td>101</td>
                    <td><a href="/campaign/101">Oppo</a></td>
                    <td>running</td>
                    <td>180,000</td>
                    <td>100,000</td>

                    <td>50,000</td>
                    <td>0.7%</td>
                    <td>0.7%</td>
                    <td>50,000</td>
                </tr>-->
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    var formatTime = function (x) {
        return new moment(x).format("YYYY-MM-DD");
    };

    d3.json("{{site.ssl_api_domain}}/api/creative/stats", function (error, data) {
        Morris.Line({
            element: 'campaigns_stats_chart',
            data: data,
            xkey: 'period',
            ykeys: ['totalImp', 'totalTrv', 'totalClick'],
            labels: ['Impression', 'Completed View', 'Click'],
            pointSize: 2,
            hideHover: 'auto',
            resize: true,
            dateFormat :  formatTime
        });
    });


</script>