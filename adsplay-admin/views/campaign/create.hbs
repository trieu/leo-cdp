<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            {{dashboard_title}}
        </h1>
    </div>
</div>
<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        From {{dashboard_title}}
      </div>
      <div class="panel-body">
        <form action="/campaign/create" method="post" id="campaign-form">

          <input type="hidden" name="_id">
          <div class="form-group">
            <label class="label-important">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name">
          </div>
          
          <div class="form-group">
            <label class="label-important">Select Ads</label>
            <select type="select" class="select-multi" id="ads_select" name="ads" data-placeholder="please select a Ads" multiple="multiple">
                {{#each ads}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
$("#ads_select").chosen({width: "100%", no_results_text: "Oops, nothing found!"});
</script>