<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="/flight/">Ad flight Management</a></li>
            <li class="active">Ad flight Report</li>
        </ol>
        <h3 class="page-header">
            Ad flight Report
        </h3>
    </div>
</div>

<div class="row">
  <div class="col-md-12 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
      	<div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <tbody>
                <tr>
                    <td><strong>Id</strong></td>
                    <td><span id="flight_id">{{flight._id}}</span></td>
                </tr>
                <tr>
                    <td><strong>Name</strong></td>
                    <td><span id="flight_name">{{flight.name}}</span></td>
                </tr>
                <tr>
                    <td><strong>Schedules</strong></td>
                    <td>
                    <ul id="flight_begin">
                        {{#each flight.schedules}}
                            <li>{{begin}} <i class="fa fa-arrow-right" aria-hidden="true"></i> {{end}}
                            <strong class="color-blue" title="booking"> <i class="fa fa-hand-o-right" aria-hidden="true"></i> {{booking}}</strong>
                            </li>
                        {{/each}}
                    </ul>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>