<style>
    span[datatype=real-time] {
        font-weight: bold;
        font-size: 18px;;
    }

    img.thumbnail {
        display: none;
    }

    div.ads_format {
        width: 100%;
        height: 40px;
        font-weight: bold;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="creative/list/all">All Advertising Units</a></li>
            <li class="active">New Advertising Unit</li>
        </ol>
        <h1 class="page-header">
            <span>Create an advertising unit</span>
        </h1>
    </div>
</div>

<div id="fm_chooser" class="row">
    <div class="col-lg-3 "></div>
    <div class="col-lg-6 text-center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Select an Ad Unit Format <i class="fa fa-question-circle fa-3" aria-hidden="true"></i></h4>
            </div>
            <div class="panel-body text-left">
                <div class="radio ads_format" id="ad_format">
                    <label>
                        <input checked type="radio" name="ads_format" value="/creative/new/local-ad-unit/video">
                        <strong>TVC Video Ad</strong> -
                        <a target="_blank" href="http://itvad.net/index.php/welcome/demofptplay">Preview</a>
                    </label>
                </div>

                <div class="radio ads_format">
                    <label><input type="radio" name="ads_format" value="/creative/new/local-ad-unit/overlay">
                        <strong>Overlay Banner Ad</strong> -
                        <a target="_blank" href="http://itvad.net/index.php/welcome/demonhacso">Preview</a>
                    </label>
                </div>

                <div class="radio ads_format">
                    <label><input type="radio" name="ads_format" value="/creative/new/local-ad-unit/display">
                        <strong>Display Banner</strong> -
                        <a target="_blank" href="javascript:">Preview</a>
                    </label>
                </div>

                <div class="radio ads_format">
                    <label>
                        <input type="radio" name="ads_format" value="/creative/new/local-ad-unit/news">
                        <strong>Breaking News</strong> -
                        <a target="_blank" href="http://itvad.net/index.php/welcome/breakingnews">Preview</a>
                    </label>
                </div>
                <div class="text-center">
                    <p>
                        <a id="ads_format_ok" href="javascript:void(0)" class="btn btn-primary" style="width: 100px;">
                            <i class="fa fa-fw fa-play"></i> OK
                        </a>
                        <a id="ads_format_cancel" href="javascript:void(0)" class="btn btn-default"
                           style="width: 100px;">
                            <i class="fa fa-fw fa-stop"></i> Cancel
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>

<div id="alert-ok" class="alert alert-success" style="display: none">
    <strong id="alert-ok-msg">Success! Redirecting to All Ad Unit ...</strong>

    <div style="text-align: center">
        <img src="http://www.certiw.com/wp-content/themes/certiw/assets/images/ajax-load.gif">
    </div>
</div>


<script>
    $('#ads_format_ok').click(function () {
        window.location.href = $('input[name=ads_format]:checked').val();
    });
    $('#ads_format_cancel').click(function () {
        window.location.href = '/creative/list/all';
    });


</script>