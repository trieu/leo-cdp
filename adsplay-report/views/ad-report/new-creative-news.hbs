<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="creative/list/all">All Advertising Units</a></li>
            <li class="active">New Advertising Unit</li>
        </ol>
        <h1 class="page-header">
            <span>Create an advertising unit</span>
        </h1>
    </div>
</div>


<div class="row">
    <div class="col-lg-4 text-center">
        <div class="panel">
            <div class="panel-body">
                <div class="video-container-breakingnews" >
                    <div class="break-news"><marquee id="news-marquee"></marquee></div>
                    <video id="my-video" class="video-js vjs-default-skin" autoplay controls preload="auto" data-setup='{}'  >
                        <source src="https://ads-cdn.fptplay.net/static/videos/demo-sport-2.mp4" type='video/mp4' />
                    </video>

                </div>
                <label>Input Text Breaking News</label><br/>
                <textarea id="BreakingNews_Text" class="form-control"></textarea><br/>

            </div>
        </div>
    </div>
    <div class="col-lg-8 text-center">
        {{>new-creative-partial}}
    </div>
</div>
<script>
    $(document).ready(function() {

        setTimeout(playText, 1000000);

        function playText(){
            document.getElementById('mymarquee').start();
        }

        $('#BreakingNews_Text').keyup(function(){
            $('.break-news').show();
            var text = $('#BreakingNews_Text').val();
            $('#news-marquee').html(text);

        });

    });
</script>