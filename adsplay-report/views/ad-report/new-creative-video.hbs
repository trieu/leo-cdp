<link href="https://vjs.zencdn.net/5.9.2/video-js.css" rel="stylesheet">
<script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
<script src="https://vjs.zencdn.net/5.9.2/video.js"></script>
<style type="text/css">
    .iframeVideo{
        position: relative;
        background-image: url('https://lh3.googleusercontent.com/HRXqHkMXMh4yC0vCNMoqG3QpNZGuw__ZABPBdZsq2ZwHn3k-FIZw3nK5i7O9Z9AQeA=w300');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
        height: 300px;
        margin-top: 15px;
        cursor: pointer;
    }
    .iframeVideo iframe,
    .iframeVideo .video-js{
        width: 100%;
        height: 100%;
    }
    .videoOpen{
        position: absolute;
        margin-top: -20px;
        top: 50%;
        left: 0;
        width: 100%;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.4);
    }
    #my-video{
        width: 100%;
        height: 300px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="creative/list/all">All Advertising Units</a></li>
            <li class="active">New Advertising Unit</li>
        </ol>
        <h1 class="page-header">
            <span>Create an advertising unit</span>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 text-center">

        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#video_youtube">Upload video from youtube</a>
                    </h4>
                </div>
                <div id="video_youtube" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="iframeFrame">
                            <input type="text" class="form-control" placeholder="Enter TVC Video URL from YouTube" pattern="https?://.+" name="video_url" id="video_url">
                            <div class="iframeVideo"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#video_local">Upload video from local</a>
                    </h4>
                </div>
                <div id="video_local" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="iframeFrame">
                            <input type="file" name="video_file" id="video_file">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9 text-center">
        {{>new-creative-partial}}
    </div>
</div>