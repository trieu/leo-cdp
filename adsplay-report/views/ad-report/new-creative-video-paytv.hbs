<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="creative/list/all">All Advertising Units</a></li>
            <li class="active">New PayTV Video Ad Unit</li>
        </ol>
        <h1 class="page-header text-center">
            <span>New PayTV Video Ad Unit</span>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 ">
        <div class="panel panel-default">
            <div class="panel-heading"><h3><i class="fa fa-cloud-upload" aria-hidden="true"></i> Video Uploader</h3></div>
            <div class="panel-body">
                <div class="panel-group" id="accordion_tvc_upload">
                    <div class="panel panel-default" style="display: none;">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <i class="fa fa-youtube-square" aria-hidden="true"></i>
                                <a data-toggle="collapse" data-parent="#accordion_tvc_upload" href="#video_youtube">File from YouTube</a>
                            </h4>
                        </div>
                        <div id="video_youtube" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="iframeFrame">
                                    <input type="text" class="form-control" placeholder="Enter YouTube URL" pattern="https?://.+" name="video_url" id="video_url">
                                    <div class="iframeVideo"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <i class="fa fa-upload" aria-hidden="true"></i>
                                <a data-toggle="collapse" data-parent="#accordion_tvc_upload" href="#video_local">File from PC</a>
                            </h4>
                        </div>
                        <div id="video_local" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div class="iframeFrame">
                                    <input type="file" name="video_file" id="video_file">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-9 text-right">
        {{>creative-paytv-fields-partial}}
    </div>
</div>
