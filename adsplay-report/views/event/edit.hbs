<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            {{dashboard_title}}
        </h1>
    </div>
</div>

<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Event Form
      </div>
      <div class="panel-body">
        <form action="/event/edit/{{event.id}}" method="post">
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{event.name}}">
          </div>
          <div class="form-group">
            <label>Begin date</label>
            <div class="row">
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='begin_date'>
                  <input type='text' class="form-control" value="{{event.begin}}" name="begin_date" placeholder="Enter date"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='begin_time'>
                  <input type='text' class="form-control" value="{{begin_time}}" name="begin_time" placeholder="Enter time"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label>End date</label>
            <div class="row">
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='end_date'>
                  <input type='text' class="form-control" value="{{event.end}}" name="end_date" placeholder="Enter date" />
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='end_time'>
                  <input type='text' class="form-control" value="{{end_time}}" name="end_time" placeholder="Enter time" />
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
              <select class="form-control" name="status" data-value="{{event.status}}">
                  <option value="0">Invalid</option>
                  <option value="1">Pending</option>
                  <option value="2">Running</option>
                  <option value="3">Finished</option>
                  <option value="4">Expired</option>
              </select>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">

  $('#begin_date,#end_date').datetimepicker({
    format: 'YYYY-MM-DD'
  });
  $('#begin_time,#end_time').datetimepicker({
    format: 'LT'
  });

  $status = $('[name="status"]');
  $status.val($status.attr('data-value'));

</script>