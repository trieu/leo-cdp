<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            {{dashboard_title}}
        </h1>
    </div>
</div>
<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Create Event
      </div>
      <div class="panel-body">
        <form action="/event/create" method="post">
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name">
          </div>
          <div class="form-group">
            <label>Begin date</label>
            <div class="row">
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='begin_date'>
                  <input type='text' class="form-control" name="begin_date" placeholder="Enter date"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='begin_time'>
                  <input type='text' class="form-control" name="begin_time" placeholder="Enter time"/>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label>End date</label>
            <div class="row">
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='end_date'>
                  <input type='text' class="form-control" name="end_date" placeholder="Enter date" />
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
              </div>
              <div class="col-md-6 col-sm-12">
                <div class='input-group date' id='end_time'>
                  <input type='text' class="form-control" name="end_time" placeholder="Enter time" />
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-time"></span>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#begin_date,#end_date').datetimepicker({
    format: 'YYYY-MM-DD'
  });
  $('#begin_time,#end_time').datetimepicker({
    format: 'LT'
  });

</script>