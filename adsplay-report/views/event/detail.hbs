<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Event Details
        </h1>
    </div>
</div>

<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
      	<div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <tbody>
                <tr>
                    <td><strong>name</strong></td>
                    <td><span id="event_name">{{event.name}}</span></td>
                </tr>
                <tr>
                    <td><strong>Begin date</strong></td>
                    <td><span id="event_begin">{{event.begin}}</span></td>
                </tr>
                <tr>
                    <td><strong>Run date</strong></td>
                    <td><span id="event_end">{{event.end}}</span></td>
                </tr>
                <tr>
                    <td><strong>Status</strong></td>
                    <td>
                        <span id="ads_status" data-status="{{event.status}}">{{event.status}}</span>
                    </td>
                </tr>
                <tr>
                    <td><strong>Total View</strong></td>
                    <td><span id="ads_view">{{event.view}}</span></td>
                </tr>
                </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>