<div class="panel panel-default">
    <div class="panel-heading">
        <h2><i class="fa fa-info-circle" aria-hidden="true"></i> Ad Information</h2>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <tbody>
                <tr id="row_ads_name">
                    <td><strong>Name</strong></td>
                    <td>
                        <input type="text" value="PayTV-" class="form-control" id="ads_name" data-creative-field="name" required
                               placeholder="Enter Ad Name">
                    </td>
                </tr>
                <input type="hidden" id="ads_des" data-creative-field="desc">
                <input type="hidden" id="ads_clickthr" data-creative-field="cliThr">
                <input type="hidden" id="ads_thirdparty_url" data-creative-field="vastXml3rd">
                <input type="hidden" id="ads_status" data-creative-field="status" value="1">

                <div id="target_ad_placements" style="display: none">
                    <input  type="checkbox" checked id="ad_placements" data-creative-field="tgpms" value="320">
                </div>

                <tr>
                    <td><strong>Base Cost of One impression</strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_basecost" data-creative-field="cost" required
                               min="0" placeholder="Enter Base Cost" value="0">
                    </td>
                </tr>
                <tr>
                    <td><strong>Total Booking (impression or complete-view) </strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_totalbooking" data-creative-field="tBk"
                               required min="0" placeholder="Enter Total Booking" value="0">
                    </td>
                </tr>
                <tr>
                    <td><strong>Daily Booking (impression or complete-view) </strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_dailybooking" data-creative-field="dBk"
                               required min="0" placeholder="Enter Daily Booking" value="0">
                    </td>
                </tr>
                <tr style="display: none">
                    <td><strong>Hourly Booking (impression / complete-view) </strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_hourlybooking" data-creative-field="hBk"
                               required min="0" placeholder="Enter Hourly Booking" value="0">
                    </td>
                </tr>

                <tr id="row_ads_duration" data-ad-type="1" >
                    <td><strong>TVC Duration</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="form-group">
                                <select class="form-control" id="ads_duration" data-creative-field="dura">
                                    <option value="00:00:05"> TVC 5 seconds</option>
                                    <option value="00:00:15"> TVC 15 seconds</option>
                                    <option value="00:00:30"> TVC 30 seconds</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td><strong>Running Date (format Month/Day/Year)</strong></td>
                    <td>
                        <input type="datetime-local" class="form-control" id="ads_running_date" data-creative-field="runDate"
                               required placeholder="Enter Running Date">
                    </td>
                </tr>
                <tr>
                    <td><strong>Expired Date (format Month/Day/Year)</strong></td>
                    <td>
                        <input type="datetime-local" class="form-control" id="ads_expired_date" data-creative-field="expiredDate"
                               required placeholder="Enter Expired Date">
                    </td>
                </tr>

                <tr>
                    <td><strong>Pricing Model</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="radio">
                                <label title="CPV (Cost per Complete-View)">
                                    <input type="radio" name="prcModel" data-creative-field="prcModel" value="1"> CPV
                                    (Cost per Complete-View)</label>
                            </div>
                            <div class="radio ">
                                <label title="CPM (Cost per Mile)">
                                    <input type="radio" checked name="prcModel" data-creative-field="prcModel" value="2"> CPM
                                    (Cost per Mile)</label>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td><strong>Ad Frequency </strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="form-group">
                                <select class="form-control" id="ad_fqccap" data-creative-field="fqcCap">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5" selected>5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr id="row_ads_startime" data-ad-type="1" >
                    <td><strong>Start time</strong></td>
                    <td>
                        <div>
                            <select class="form-control" id="ads_startime" data-creative-field="staTime"  >
                                <option value="00:00:00">Pre-roll</option>
                                <option value="00:05:00">Mid-roll after 5 minutes</option>
                                <option value="00:10:00">Mid-roll after 10 minutes</option>
                            </select>
                        </div>
                    </td>
                </tr>

                <tr id="row_ads_skip" data-ad-type="1" >
                    <td><strong>Skip time</strong></td>
                    <td>
                        <div>
                            <select class="form-control" id="ads_skip" data-creative-field="skip"  >
                                <option value="00:00:00" selected>0 seconds</option>
                                <option value="00:00:05">5 seconds</option>
                                <option value="00:00:15">15 seconds</option>
                                <option value="00:00:30">30 seconds</option>
                            </select>
                        </div>
                    </td>
                </tr>

                <tr id="row-profile">
                    <td><strong>Profile</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="checkbox">
                                <label><input type="checkbox" id="profile-all"> ALL</label>
                            </div>    
                            <div class="checkbox">
                                <label><input type="checkbox"  name="profile" data-creative-field="profile" value="adsl"> ADSL</label>
                            </div>    
                            <div class="checkbox">
                                <label><input type="checkbox"  name="profile" data-creative-field="profile" value="vdsl"> VDSL</label>
                            </div>
                        </div>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<hr>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2><i class="fa fa-crosshairs" aria-hidden="true"></i> Targeting Information</h2>
    </div>
    <div class="panel-body">
        <div>
            <table class="table table-bordered table-hover table-striped" style="height: 300px">
                <tbody>


                <tr data-ad-type="1" style="display: none">
                    <td><strong>Device Platform</strong></td>
                    <td>
                        <div class="panel-body text-left" id="ad_target_device">

                            <div class="checkbox">
                                <label><input type="checkbox" disabled checked data-creative-field="tgpfs" value="6"
                                              data-paytv="default">IPTV TV</label>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td><strong>Targeting Category</strong></td>
                    <td width="70%">
                        <div>
                            <select class="select-multi" id="ad_target_content_cats" type="select" data-creative-field="tgcats"
                                    data-placeholder="PayTV - Show Ads in these categories" multiple="multiple">

                                {{#each payTVCategories}}
                                    <optgroup label="{{TypeName}}">
                                        {{#each ListView}}
                                            <option value="{{ID}}">{{Category}}</option>
                                        {{/each}}
                                    </optgroup>
                                {{/each}}
                            </select>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td><strong>Targeting Location</strong></td>
                    <td>
                        <div>
                            <select class="select-multi" id="ad_target_locs" type="select" data-creative-field="tglocs"
                                    data-placeholder="PayTV - Show Ads in these locations" multiple="multiple">
                                {{#each locationCodes}}
                                    <optgroup label="{{AreaName}}">
                                        {{#each ListArea}}
                                            <option value="{{ConChar}}">{{LocName}}</option>
                                        {{/each}}
                                    </optgroup>
                                {{/each}}
                            </select>
                        </div>
                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>

<hr>

<div class="panel">
    <div class="col-lg-12 text-center">
        <div class="col-lg-5 ">
            <button style="width: 100%" id="ads_action_ok" type="button" class="btn btn-success"> OK</button>
        </div>
        <div class="col-lg-5 ">
            <button style="width: 100%" id="ads_action_cancel" type="button" class="btn btn-warning"> Cancel</button>
        </div>
    </div>
</div>

