<div class="panel panel-default">
    <div class="panel-heading">
        <h2><i class="fa fa-info-circle" aria-hidden="true"></i> Ad Information</h2>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <tbody>
                <tr id="row_ads_name" >
                    <td><strong>Name</strong></td>
                    <td>
                        <input type="text" class="form-control" id="ads_name" data-creative-field="name"  required placeholder="Enter Ad Name">
                    </td>
                </tr>
                <tr id="row_ads_des" >
                    <td><strong>Description</strong></td>
                    <td>
                        <input type="text" class="form-control" id="ads_des" data-creative-field="desc" placeholder="Enter Ad Description">
                    </td>
                </tr>
                <tr id="row_ads_clickthr" data-paytv="false">
                    <td><strong>Click-through URL</strong></td>
                    <td>
                        <input type="url" class="form-control" id="ads_clickthr" data-creative-field="cliThr" pattern="https?://.+" placeholder="Enter Click-through URL">
                    </td>
                </tr>
                <tr id="row_ads_thirdparty_url" data-ad-type="1" data-paytv="false">
                    <td><strong>Third-party Ad URL</strong></td>
                    <td>
                        <input type="url" class="form-control" id="ads_thirdparty_url"  data-creative-field="vastXml3rd" pattern="https?://.+" placeholder="Enter Third-party Ad URL">
                    </td>
                </tr>
                <tr id="row_ads_status">
                    <td><strong>Status</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="form-group">
                                <select class="form-control" id="ads_status" data-creative-field="status"  >
                                    <option value="0">Invalid</option>
                                    <option value="1">Pending</option>
                                    <option value="2">Running</option>
                                    <option value="3">Finished</option>
                                    <option value="4">Expired</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><strong>Cost for 1 impression / complete-view</strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_basecost" data-creative-field="cost" required min="0"  placeholder="Enter Base Cost" value="0" >
                    </td>
                </tr>
                <tr>
                    <td><strong>Total Booking (impression / complete-view) </strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_totalbooking" data-creative-field="tBk" required min="0" placeholder="Enter Total Booking" value="0" >
                    </td>
                </tr>
                <tr>
                    <td><strong>Daily Booking (impression / complete-view) </strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_dailybooking" data-creative-field="dBk" required min="0" placeholder="Enter Daily Booking" value="0" >
                    </td>
                </tr>
                <tr>
                    <td><strong>Hourly Booking (impression / complete-view) </strong></td>
                    <td>
                        <input type="number" class="form-control" id="ads_hourlybooking" data-creative-field="hBk" required min="0" placeholder="Enter Hourly Booking" value="0" >
                    </td>
                </tr>
                <tr id="row_ads_duration" data-ad-type="1" >
                    <td><strong>TVC Duration</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="form-group">
                                <select class="form-control" id="ads_duration" data-creative-field="dura"  >
                                    <option value="00:00:05"> TVC 5 seconds</option>
                                    <option value="00:00:15"> TVC 15 seconds</option>
                                    <option value="00:00:30"> TVC 30 seconds</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr id="row_ads_skip" data-ad-type="1" >
                    <td><strong>Skip time</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="form-group">
                                <select class="form-control" id="ads_skip" data-creative-field="skip"  >
                                    <option value="00:00:05">5 seconds</option>
                                    <option value="00:00:15">15 seconds</option>
                                    <option value="00:00:30">30 seconds</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr id="row_ads_startime" data-ad-type="1" >
                    <td><strong>Start time</strong></td>
                    <td>
                        <div class="panel-body text-left">
                            <div class="form-group">
                                <select class="form-control" id="ads_startime" data-creative-field="staTime"  >
                                    <option value="00:00:00">Pre-roll</option>
                                    <option value="00:05:00">Mid-roll after 5 minutes</option>
                                    <option value="00:10:00">Mid-roll after 10 minutes</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><strong>Running Date (format Month/Day/Year)</strong></td>
                    <td>
                        <input type="date" class="form-control" id="ads_running_date" data-creative-field="runDate" required placeholder="Enter Running Date">
                    </td>
                </tr>
                <tr>
                    <td><strong>Expired Date (format Month/Day/Year)</strong></td>
                    <td>
                        <input type="date" class="form-control" id="ads_expired_date"  data-creative-field="expiredDate" required placeholder="Enter Expired Date">
                    </td>
                </tr>
                <tr>
